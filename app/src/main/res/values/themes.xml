<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.HelloFancyWorld" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
        
        <!-- Make the status bar transparent and content draw under it -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Additional theme customizations -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>
    
    <!-- Night mode theme -->
    <style name="Theme.HelloFancyWorld.Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Similar customizations but with darker colors -->
    </style>
</resources>
