<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kindergardenmanager">

    <application
        android:name=".KindergardenApplication"
        android:allowBackup="true"
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelloFancyWorld">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.activity.LoginActivity"
            android:exported="false" />
            
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:exported="false" />
            
        <activity
            android:name=".ui.activity.AdminDashboardActivity"
            android:exported="false" />
            
        <activity
            android:name=".ui.activity.TeacherDashboardActivity"
            android:exported="false" />
            
        <activity
            android:name=".ui.activity.ParentDashboardActivity"
            android:exported="false" />
            
        <activity
            android:name=".ui.activity.KitchenStaffDashboardActivity"
            android:exported="false" />
    </application>

</manifest>